    <title>QR Code Generator</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            text-align: center;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }
        .form-group {
            margin-bottom: 20px;
        }
        #qrCode {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">QR Code Generator</h1>
        <div class="form-group">
            <input type="text" id="text" class="form-control" placeholder="Enter text or URL">
        </div>
        <button onclick="generateQRCode()" class="btn btn-primary">Generate QR Code</button>
        <div id="qrCodeContainer" class="mt-4">
            <canvas id="qrCode"></canvas>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.4.4/build/qrcode.min.js"></script>
    <script>
        const qrCode = new QRCode(document.getElementById("qrCode"), {
            width: 200,
            height: 200
        });

        function generateQRCode() {
            const text = document.getElementById("text").value;
            qrCode.clear(); // Clear existing QR Code
            qrCode.makeCode(text); // Generate new QR Code
        }
    </script>
</body>
